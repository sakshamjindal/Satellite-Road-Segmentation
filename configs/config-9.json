{
    "name": "Exp9-DeepLabv3_plus-WarmRestartsLR",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone" : "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
            "data_dir": "/scratch/saksham/data/road_segmentation_ideal/",
            "batch_size": 8,
            "crop_size": 512
    },

    "val_loader": {
            "data_dir": "/scratch/saksham/data/road_segmentation_ideal/",
            "batch_size": 2,
            "crop_size": 480,
            "val": true,
            "split": "val",
            "num_workers": 4
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": false,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "weights" : [1, 5],
    "lr_scheduler": {
        "type": "CosineAnnealingWarmRestarts",
        "args": {
            "t_actual": 22, "t_mul": 2, "lr_max": 0.01, "lr_min": 0.00001, "decay": 1
        }
    },

    "trainer": {
        "epochs": 100,
        "num_classes" : 2,
        "save_dir": "saved/",
        "save_period": 5,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 10,

        "val": true,
        "val_per_epochs": 5
    }
}
