{
    "name": "Exp3_Unet_Dice",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "UNetResnet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
            "data_dir": "/scratch/saksham/data/road_segmentation_ideal/",
            "batch_size": 8,
            "crop_size": 512
    },

    "val_loader": {
            "data_dir": "/scratch/saksham/data/road_segmentation_ideal/",
            "batch_size": 2,
            "crop_size": 512,
            "val": true,
            "split": "val",
            "num_workers": 4
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "DiceLoss",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 80,
        "num_classes" : 2,
        "save_dir": "saved/",
        "save_period": 5,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 10,

        "val": true,
        "val_per_epochs": 5
    }
}
